<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape android:shape="ring" android:innerRadiusRatio="6.0" android:thicknessRatio="20.0" android:useLevel="true">
            <gradient android:startColor="@color/futuristic_glow" android:endColor="@color/futuristic_accent" android:angle="0.0" android:type="sweep" android:centerColor="@color/futuristic_blue_glow" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="270.0" android:toDegrees="270.0" android:pivotX="50.0%" android:pivotY="50.0%">
            <shape android:shape="ring" android:innerRadiusRatio="6.0" android:thicknessRatio="20.0" android:useLevel="true">
                <gradient android:startColor="@color/futuristic_primary" android:endColor="@color/futuristic_blue_glow" android:angle="0.0" android:type="sweep" android:centerColor="@color/futuristic_accent" />
            </shape>
        </rotate>
    </item>
</layer-list>
