<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Texto oscuro cuando el fondo se rellena de blanco -->
    <item android:state_pressed="true" android:color="@color/text_color"/>
    <item android:state_focused="true" android:color="@color/text_color"/>
    <item android:state_activated="true" android:color="@color/text_color"/>
    <!-- Estado normal: texto blanco sobre fondo transparente -->
    <item android:color="@color/white"/>
</selector>
