<?xml version="1.0" encoding="utf-8"?>
<!-- Botón Telegram Verde Eléctrico Fusionado -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo con gradiente fusionado verde-cyan eléctrico -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:angle="225"
                android:startColor="#1A4CAF50"
                android:centerColor="#2A00D9A5"
                android:endColor="#1A00CED1"
                android:type="linear"/>
        </shape>
    </item>
    <!-- Efecto de energía fusionada -->
    <item android:top="0dp" android:bottom="24dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:angle="90"
                android:startColor="#4000FF88"
                android:endColor="#0000FF88"
                android:type="linear"/>
        </shape>
    </item>
    <!-- Borde eléctrico doble -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <stroke android:width="2.5dp" android:color="#804CAF50"/>
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <stroke android:width="1dp" android:color="#6000CED1"/>
        </shape>
    </item>
</layer-list>