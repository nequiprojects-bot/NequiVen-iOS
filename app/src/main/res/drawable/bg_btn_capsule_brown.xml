<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra externa inferior -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <solid android:color="#33000000" />
        </shape>
    </item>
    <!-- Cuerpo del botón con pequeño margen para que se vea la sombra -->
    <item android:top="3dp" android:bottom="6dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <solid android:color="#8D6E63" />
            <stroke android:width="1dp" android:color="#CCFFFFFF" />
        </shape>
    </item>
    <!-- Highlight superior sutil -->
    <item android:top="3dp" android:left="6dp" android:right="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <gradient android:type="linear" android:angle="270"
                android:startColor="#26FFFFFF" android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>
