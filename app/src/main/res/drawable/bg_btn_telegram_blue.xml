<?xml version="1.0" encoding="utf-8"?>
<!-- Botón Telegram Azul Eléctrico -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo con gradiente eléctrico azul -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:angle="135"
                android:startColor="#0047AB"
                android:centerColor="#0088CC"
                android:endColor="#00BFFF"
                android:type="linear"/>
        </shape>
    </item>
    <!-- Brillo superior -->
    <item android:top="0dp" android:bottom="32dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:angle="90"
                android:startColor="#60FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear"/>
        </shape>
    </item>
    <!-- Borde eléctrico brillante -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#80D0FFFF"/>
        </shape>
    </item>
</layer-list>