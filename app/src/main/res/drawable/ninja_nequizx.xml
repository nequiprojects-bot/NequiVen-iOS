<?xml version="1.0" encoding="utf-8"?>
<!-- Ninja de Nequizx - Azul Eléctrico -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="#40000000"/>
            <size android:width="32dp" android:height="8dp"/>
        </shape>
    </item>
    <!-- Cuerpo -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0088CC"/>
            <corners android:radius="8dp"/>
            <size android:width="24dp" android:height="40dp"/>
        </shape>
    </item>
    <!-- Cabeza -->
    <item android:top="2dp" android:left="6dp">
        <shape android:shape="oval">
            <solid android:color="#00BFFF"/>
            <size android:width="12dp" android:height="12dp"/>
        </shape>
    </item>
    <!-- Máscara ninja -->
    <item android:top="6dp" android:left="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#001F3F"/>
            <size android:width="8dp" android:height="4dp"/>
        </shape>
    </item>
    <!-- Energía eléctrica -->
    <item android:top="16dp" android:left="2dp">
        <shape android:shape="oval">
            <solid android:color="#80D0FFFF"/>
            <size android:width="6dp" android:height="6dp"/>
        </shape>
    </item>
</layer-list>
