<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_200020"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Error notification (PIN) ARRIBA y al frente -->
    <include
        android:id="@+id/errorNotification"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/error_notification" />

    <!-- Back arrow -->
    <ImageView
        android:id="@+id/ivBackArrow"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:foreground="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="18dp"
        android:text="Escribe tu clave"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/manrope_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBackArrow" />

    <!-- Overlay de carga con video pantalla completa (inicialmente oculto) -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:elevation="16dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <FrameLayout
            android:id="@+id/loadingAnimationContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <include
                android:id="@+id/customLoadingAnimation"
                layout="@layout/custom_loading_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </FrameLayout>

    <!-- Password boxes -->
    <LinearLayout
        android:id="@+id/passwordBoxesContainer"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <TextView
            android:id="@+id/passwordBox1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/password_box_background"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/passwordBox2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/password_box_background"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/passwordBox3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/password_box_background"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/passwordBox4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/password_box_background"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp" />
    </LinearLayout>

    <!-- Confirm text -->
    <TextView
        android:id="@+id/tvConfirmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="No dudamos que seas tú...\nPero es mejor confirmar ;)"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/manrope_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordBoxesContainer" />

    <!-- Numeric keypad -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/numericKeypad"
        android:layout_width="380dp"
        android:layout_height="252dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@id/tvForgotPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Fila 1 -->
        <TextView
            android:id="@+id/btnKey1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toStartOf="@id/btnKey2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btnKey2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toStartOf="@id/btnKey3"
            app:layout_constraintStart_toEndOf="@id/btnKey1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btnKey3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnKey2"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Fila 2 -->
        <TextView
            android:id="@+id/btnKey4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="@id/btnKey1"
            app:layout_constraintStart_toStartOf="@id/btnKey1"
            app:layout_constraintTop_toBottomOf="@id/btnKey1" />

        <TextView
            android:id="@+id/btnKey5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="@id/btnKey2"
            app:layout_constraintStart_toStartOf="@id/btnKey2"
            app:layout_constraintTop_toBottomOf="@id/btnKey2" />

        <TextView
            android:id="@+id/btnKey6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="@id/btnKey3"
            app:layout_constraintStart_toStartOf="@id/btnKey3"
            app:layout_constraintTop_toBottomOf="@id/btnKey3" />

        <!-- Fila 3 -->
        <TextView
            android:id="@+id/btnKey7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="@id/btnKey4"
            app:layout_constraintStart_toStartOf="@id/btnKey4"
            app:layout_constraintTop_toBottomOf="@id/btnKey4" />

        <TextView
            android:id="@+id/btnKey8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="@id/btnKey5"
            app:layout_constraintStart_toStartOf="@id/btnKey5"
            app:layout_constraintTop_toBottomOf="@id/btnKey5" />

        <TextView
            android:id="@+id/btnKey9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="@id/btnKey6"
            app:layout_constraintStart_toStartOf="@id/btnKey6"
            app:layout_constraintTop_toBottomOf="@id/btnKey6" />

        <!-- Fila 4 -->
        <ImageView
            android:id="@+id/btnKeyDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/finger_print_outline"
            android:tint="@color/white"
            app:layout_constraintEnd_toEndOf="@id/btnKey7"
            app:layout_constraintStart_toStartOf="@id/btnKey7"
            app:layout_constraintTop_toBottomOf="@id/btnKey7" />

        <TextView
            android:id="@+id/btnKey0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="@id/btnKey8"
            app:layout_constraintStart_toStartOf="@id/btnKey8"
            app:layout_constraintTop_toBottomOf="@id/btnKey8" />

        <ImageView
            android:id="@+id/btnBackspace"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/numeric_key_background"
            android:focusable="true"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/ic_backspace"
            android:tint="@color/white"
            app:layout_constraintEnd_toEndOf="@id/btnKey9"
            app:layout_constraintStart_toStartOf="@id/btnKey9"
            app:layout_constraintTop_toBottomOf="@id/btnKey9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Forgot password -->
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_border_white_state"
        android:padding="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:focusable="true"
        android:clickable="true"
        android:text="Olvidé mi clave"
        android:textSize="14sp"
        android:textColor="@color/forgot_password_text_selector"
        android:fontFamily="@font/manrope_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Hidden EditText for input -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:inputType="numberPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>