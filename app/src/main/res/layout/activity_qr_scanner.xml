            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/codeButtonContainer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="64dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@id/flashlightButtonContainer" app:layout_constraintStart_toStartOf="parent">
            <ImageView android:id="@+id/btnCode" android:background="@drawable/bg_round_btn" android:padding="10.0dip" android:focusable="true" android:clickable="true" android:layout_width="40.0dip" android:layout_height="40.0dip" android:src="@drawable/ic_code_btn" />
            <TextView android:textSize="10.0sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4.0dip" android:text="C칩digo" android:fontFamily="@font/manrope_regular" />
