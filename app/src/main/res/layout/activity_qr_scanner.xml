            <ImageView android:id="@+id/btnFlashlight" android:background="@drawable/bg_round_btn" android:padding="10.0dip" android:focusable="true" android:clickable="true" android:layout_width="40.0dip" android:layout_height="40.0dip" android:src="@drawable/ic_flashlight" />
