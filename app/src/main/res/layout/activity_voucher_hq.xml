<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comprobante_background"
    android:hardwareAccelerated="true"
    android:layerType="hardware">

    <!-- Imagen del voucher en ULTRA ALTA CALIDAD -->
    <ImageView
        android:id="@+id/ivVoucherHQ"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="Comprobante de pago"
        android:filterTouchesWhenObscured="false"
        android:layerType="hardware" />

    <!-- Círculo de carga -->
    <ImageView
        android:id="@+id/loadingCircleVoucher"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:src="@drawable/loading_circle_comprobante"
        android:contentDescription="Cargando"
        android:visibility="visible" />

    <!-- Botón invisible para "Listo" (zona inferior) -->
    <View
        android:id="@+id/btnListoInvisible"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0.0" />

    <!-- Botón invisible para "Compartir" (esquina superior derecha) -->
    <View
        android:id="@+id/btnCompartirInvisible"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0.0" />

</FrameLayout>
