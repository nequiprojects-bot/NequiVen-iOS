<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comprobante_background">

    <!-- ScrollView para permitir ver ambas partes del comprobante -->
    <ScrollView
        android:id="@+id/scrollViewVoucher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_margin="0dp">

            <!-- Primera parte: Comprobante generado con datos -->
            <ImageView
                android:id="@+id/ivVoucherQrHQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:contentDescription="Comprobante de pago QR"
                android:filterTouchesWhenObscured="false"
                android:padding="0dp"
                android:layout_margin="0dp" />

            <!-- Segunda parte: Sección de "¿Algún problema?" + Botón Listo -->
            <!-- SIN MARGEN para que se pegue perfectamente -->
            <ImageView
                android:id="@+id/ivVoucherQrSecondPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:contentDescription="Sección inferior del comprobante"
                android:visibility="gone"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:layout_marginTop="0dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Círculo de carga -->
    <ImageView
        android:id="@+id/loadingCircleVoucherQr"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:src="@drawable/loading_circle_comprobante"
        android:contentDescription="Cargando"
        android:visibility="visible" />

    <!-- Botón invisible para "Listo" (zona inferior) - Se activará cuando haga scroll -->
    <View
        android:id="@+id/btnListoInvisible"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0.0" />

    <!-- Botón invisible para "Compartir" (esquina superior derecha) -->
    <View
        android:id="@+id/btnCompartirInvisible"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0.0" />

</FrameLayout>
