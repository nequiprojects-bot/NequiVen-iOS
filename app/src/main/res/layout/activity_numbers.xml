<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:background="#ff1e0b1f" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:padding="16.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="24.0dip">
            <ImageButton android:id="@+id/btnBack" android:background="?selectableItemBackgroundBorderless" android:padding="12.0dip" android:layout_width="48.0dip" android:layout_height="48.0dip" android:src="@drawable/ic_back" android:tint="@android:color/white" />
            <TextView android:textSize="12.0sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Números" android:fontFamily="@font/manrope" android:layout_marginStart="12.0dip" android:textFontWeight="500" />
        </LinearLayout>
        <!-- Campo de visualización esperado por ActivityNumbersBinding -->
        <TextView
            android:id="@+id/tvDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Controles esperados: borrar, eliminar, confirmar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpiar" />
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Borrar" />
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Confirmar" />
        </LinearLayout>

        <!-- Teclado numérico (IDs usados por el código) -->
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/btn1" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="1" />
                <Button android:id="@+id/btn2" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="2" />
                <Button android:id="@+id/btn3" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="3" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/btn4" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="4" />
                <Button android:id="@+id/btn5" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="5" />
                <Button android:id="@+id/btn6" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="6" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/btn7" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="7" />
                <Button android:id="@+id/btn8" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="8" />
                <Button android:id="@+id/btn9" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="9" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" />
                <Button android:id="@+id/btn0" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="0" />
                <Button android:id="@+id/btnDecimal" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="," />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvNumbers" android:paddingBottom="80.0dip" android:clipToPadding="false" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton android:layout_gravity="start|bottom" android:id="@+id/fabAddNumber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16.0dip" android:src="@drawable/ic_add" app:backgroundTint="#ffff0066" app:tint="@android:color/white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
