<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- Botón de regresar -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Regresar" />

        <!-- Ilustración principal -->
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/empty_movements"
            android:contentDescription="Ilustración de reloj" />

        <!-- Título principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/manrope_bold"
            android:text="¿Cuándo llega la plata?"
            android:textAlignment="center"
            android:textColor="#1A1A1A"
            android:textSize="22sp" />

        <!-- Opción 1: Lunes a Jueves -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:gravity="start">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_clock_black_24dp"
                android:tint="@color/nequi_pink"
                android:contentDescription="Reloj" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLunesJueves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Si envías entre lunes y jueves, llegará al siguiente día"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/manrope_regular"
                    android:text="Si el día siguiente es festivo, llegará el siguiente día hábil."
                    android:textColor="#8A8A8A"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Opción 2: Viernes a Domingo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="48dp"
            android:orientation="horizontal"
            android:gravity="start">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/material_ic_calendar_black_24dp"
                android:tint="@color/nequi_pink"
                android:contentDescription="Calendario" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvViernesDomingo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Si envías entre viernes y domingo, llega el lunes"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/manrope_regular"
                    android:text="Si el lunes es festivo, llega el martes."
                    android:textColor="#8A8A8A"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Botón Continuar -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_primary_pink"
            android:elevation="0dp"
            android:fontFamily="@font/manrope_bold"
            android:minHeight="52dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:stateListAnimator="@null"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
