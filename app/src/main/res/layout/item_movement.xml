<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16.0dip"
    android:layout_marginTop="6.0dip"
    android:layout_marginRight="16.0dip"
    android:layout_marginBottom="6.0dip"
    android:layout_marginHorizontal="16.0dip"
    android:outlineSpotShadowColor="@color/nequi_purple"
    android:outlineAmbientShadowColor="@color/nequi_pink"
    app:cardBackgroundColor="#ffffffff"
    app:cardCornerRadius="8.0dip"
    app:cardElevation="3.0dip">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        android:paddingTop="14.0dip"
        android:paddingBottom="14.0dip">

        <ImageView
            android:id="@+id/imageViewMovementIcon"
            android:layout_width="22.0dip"
            android:layout_height="22.0dip"
            android:src="@drawable/arrow_down_movement"
            android:contentDescription="Icono de movimiento"
            android:rotation="180.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#ffe6335a" />

        <TextView
            android:id="@+id/textViewMovementName"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:textSize="11.0sp"
            android:textColor="@color/nequi_purple"
            android:textAllCaps="true"
            android:fontFamily="@font/manrope_medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="10.0dip"
            android:layout_marginEnd="8.0dip"
            app:layout_constraintEnd_toStartOf="@id/textViewMovementAmount"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imageViewMovementIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewMovementDate"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:textSize="11.5sp"
            android:textColor="#200021"
            android:layout_marginTop="2.0dip"
            android:fontFamily="@font/manrope_regular"
            app:layout_constraintEnd_toStartOf="@id/textViewMovementAmount"
            app:layout_constraintStart_toStartOf="@id/textViewMovementName"
            app:layout_constraintTop_toBottomOf="@id/textViewMovementName" />

        <!-- SubtÃ­tulo para pagos QR: 'PAGO EN QR BRE-B' -->
        <TextView
            android:id="@+id/textViewMovementSubtitle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:textSize="11.5sp"
            android:textColor="#200021"
            android:fontFamily="@font/manrope_regular"
            android:text="PAGO EN QR BRE-B"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/textViewMovementAmount"
            app:layout_constraintStart_toStartOf="@id/textViewMovementName"
            app:layout_constraintTop_toBottomOf="@id/textViewMovementName" />

        <TextView
            android:id="@+id/textViewMovementAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13.0sp"
            android:textColor="#ffe6335a"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>