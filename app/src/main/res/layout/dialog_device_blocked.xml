        android:contentDescription="Advertencia de Alto Voltaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp" android:text="Â¡ALERTA DE VINCULACIÃ“N!"
        android:textColor="#FF4500" android:textSize="24sp" android:fontFamily="@font/manrope_medium"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ivWarningIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Se detectÃ³ un intento de acceso. Esta cuenta ya estÃ¡ vinculada a otro dispositivo de seguridad."
