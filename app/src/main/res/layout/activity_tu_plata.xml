<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootTuPlata"
    android:background="@color/color_200020"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:tint="#ffffffff"
            android:contentDescription="Volver" />

        <TextView
            android:id="@+id/tvTitulo"
            android:textSize="@dimen/tuplata_title_size"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Así está tu plata"
            android:fontFamily="@font/manrope_bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvSubtitulo"
            android:textSize="@dimen/tuplata_subtitle_size"
            android:textColor="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toda tu plata suma"
            android:fontFamily="@font/manrope_bold" />

        <ProgressBar
            android:id="@+id/pbSaldo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:indeterminateTint="@android:color/white" />

        <TextView
            android:id="@+id/tvTotal"
            android:textSize="@dimen/tuplata_total_size"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="$ 0,00"
            android:fontFamily="@font/manrope_bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="invisible" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/svTuPlata"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerCardsTuPlata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tuplata_cards_top_margin"
                app:shimmer_auto_start="true"
                app:shimmer_base_color="#33FFFFFF"
                app:shimmer_highlight_color="#88FFFFFF"
                app:shimmer_duration="1200">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_height"
                        android:layout_marginBottom="@dimen/card_margin_bottom"
                        android:background="@drawable/bg_card_tu_plata_light"
                        android:padding="@dimen/card_padding">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/phIcon1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="14dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="7dp"
                            app:layout_constraintStart_toEndOf="@id/phIcon1"
                            app:layout_constraintTop_toTopOf="@id/phIcon1"
                            android:layout_marginStart="16dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="12dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintStart_toEndOf="@id/phIcon1"
                            app:layout_constraintTop_toBottomOf="@id/phIcon1"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="6dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_height"
                        android:layout_marginBottom="@dimen/card_margin_bottom"
                        android:background="@drawable/bg_card_tu_plata"
                        android:padding="@dimen/card_padding">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/phIcon2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="14dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="7dp"
                            app:layout_constraintStart_toEndOf="@id/phIcon2"
                            app:layout_constraintTop_toTopOf="@id/phIcon2"
                            android:layout_marginStart="16dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="12dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintStart_toEndOf="@id/phIcon2"
                            app:layout_constraintTop_toBottomOf="@id/phIcon2"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="6dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_card_tu_plata"
                        android:padding="16dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/phIcon3"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="14dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="7dp"
                            app:layout_constraintStart_toEndOf="@id/phIcon3"
                            app:layout_constraintTop_toTopOf="@id/phIcon3"
                            android:layout_marginStart="16dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="12dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintStart_toEndOf="@id/phIcon3"
                            app:layout_constraintTop_toBottomOf="@id/phIcon3"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="6dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_height"
                        android:background="@drawable/bg_card_tu_plata_dark"
                        android:padding="@dimen/card_padding">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/phIcon4"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="14dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="7dp"
                            app:layout_constraintStart_toEndOf="@id/phIcon4"
                            app:layout_constraintTop_toTopOf="@id/phIcon4"
                            android:layout_marginStart="16dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="12dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintStart_toEndOf="@id/phIcon4"
                            app:layout_constraintTop_toBottomOf="@id/phIcon4"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="6dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_height"
                        android:layout_marginTop="@dimen/card_margin_bottom"
                        android:background="@drawable/bg_card_tu_plata_dark"
                        android:padding="@dimen/card_padding">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/phIcon5"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="14dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="7dp"
                            app:layout_constraintStart_toEndOf="@id/phIcon5"
                            app:layout_constraintTop_toTopOf="@id/phIcon5"
                            android:layout_marginStart="16dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="12dp"
                            app:cardBackgroundColor="#33FFFFFF"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintStart_toEndOf="@id/phIcon5"
                            app:layout_constraintTop_toBottomOf="@id/phIcon5"
                            app:layout_constraintBottom_toBottomOf="@id/phIcon5"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="6dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
                android:id="@+id/cardsContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tuplata_cards_top_margin"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/llDisponible"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_card_tu_plata_light"
                    android:padding="@dimen/card_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/card_height"
                    android:layout_marginBottom="@dimen/card_margin_bottom"
                    android:layout_marginStart="@dimen/card_margin_horizontal"
                    android:layout_marginEnd="@dimen/card_margin_horizontal">

                    <ImageView
                        android:id="@+id/ivDisponible"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_disponible_money"
                        android:contentDescription="Icono de dinero disponible"
                        android:scaleType="centerInside"
                        app:tint="@android:color/white" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/text_margin_start">

                        <TextView
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disponible"
                            android:fontFamily="@font/manrope_bold" />

                        <TextView
                            android:id="@+id/tvDisponible"
                            android:textSize="@dimen/subtitle_text_size"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ 0,00"
                            android:fontFamily="@font/manrope_medium"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTarjeta"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_card_tu_plata_light"
                    android:padding="@dimen/card_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/card_height"
                    android:layout_marginBottom="@dimen/card_margin_bottom"
                    android:layout_marginStart="@dimen/card_margin_horizontal"
                    android:layout_marginEnd="@dimen/card_margin_horizontal">

                    <ImageView
                        android:id="@+id/ivTarjeta"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_card_tu_plata"
                        android:contentDescription="Icono de tarjeta"
                        app:tint="@android:color/white" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/text_margin_start">

                        <TextView
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tarjeta"
                            android:fontFamily="@font/manrope_bold" />

                        <TextView
                            android:id="@+id/tvTarjeta"
                            android:textSize="@dimen/subtitle_text_size"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ 0,00"
                            android:fontFamily="@font/manrope_medium" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/arrow_size"
                        android:layout_height="@dimen/arrow_size"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llColchon"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_card_tu_plata_light"
                    android:padding="@dimen/card_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/card_height"
                    android:layout_marginBottom="@dimen/card_margin_bottom"
                    android:layout_marginStart="@dimen/card_margin_horizontal"
                    android:layout_marginEnd="@dimen/card_margin_horizontal">

                    <ImageView
                        android:id="@+id/ivColchon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_mattress_tu_plata"
                        android:contentDescription="Icono de colchón"
                        app:tint="@android:color/white" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/text_margin_start">

                        <TextView
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Colchón"
                            android:fontFamily="@font/manrope_bold" />

                        <TextView
                            android:id="@+id/tvColchon"
                            android:textSize="@dimen/subtitle_text_size"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ 0,00"
                            android:fontFamily="@font/manrope_medium" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/arrow_size"
                        android:layout_height="@dimen/arrow_size"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBolsillos"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_card_tu_plata_dark"
                    android:padding="@dimen/card_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/card_height"
                    android:layout_marginBottom="@dimen/card_margin_bottom"
                    android:layout_marginStart="@dimen/card_margin_horizontal"
                    android:layout_marginEnd="@dimen/card_margin_horizontal">

                    <ImageView
                        android:id="@+id/ivBolsillos"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_pockets_tu_plata"
                        android:contentDescription="Icono de bolsillos"
                        app:tint="@android:color/white" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/text_margin_start">

                        <TextView
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bolsillos"
                            android:fontFamily="@font/manrope_bold" />

                        <TextView
                            android:id="@+id/tvBolsillos"
                            android:textSize="@dimen/subtitle_text_size"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Organiza tu plata"
                            android:fontFamily="@font/manrope_medium"
                            android:alpha="0.8" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/arrow_size"
                        android:layout_height="@dimen/arrow_size"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMetas"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_card_tu_plata_dark"
                    android:padding="@dimen/card_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/card_height"
                    android:layout_marginStart="@dimen/card_margin_horizontal"
                    android:layout_marginEnd="@dimen/card_margin_horizontal">

                    <ImageView
                        android:id="@+id/ivMetas"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_goals_tu_plata"
                        android:contentDescription="Icono de metas"
                        app:tint="@android:color/white" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/text_margin_start">

                        <TextView
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Metas"
                            android:fontFamily="@font/manrope_bold" />

                        <TextView
                            android:id="@+id/tvMetas"
                            android:textSize="@dimen/subtitle_text_size"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ahorra para un sueño acá"
                            android:fontFamily="@font/manrope_medium"
                            android:alpha="0.8" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/arrow_size"
                        android:layout_height="@dimen/arrow_size"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

            <!-- Spacer to push 'Tus topes' to the bottom of the viewport when there is extra space -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/bottomSheetTopes"
                android:orientation="vertical"
                android:background="@drawable/bg_bottom_topes"
                android:padding="@dimen/tuplata_topes_padding"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="@dimen/tuplata_topes_margin_top"
                android:layout_marginBottom="@dimen/tuplata_topes_margin_bottom"
                android:elevation="8dp">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#CC200020"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tus topes"
                        android:layout_weight="1"
                        android:fontFamily="@font/manrope_bold" />

                    <ImageView
                        android:id="@+id/ivTopesArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:tint="#CC200020"
                        android:rotation="180"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView android:id="@+id/tvCurrentBalance" android:visibility="gone" android:layout_width="1dp" android:layout_height="1dp" />
    <Button android:id="@+id/btnRecharge10" android:visibility="gone" android:layout_width="1dp" android:layout_height="1dp" />
    <Button android:id="@+id/btnRecharge20" android:visibility="gone" android:layout_width="1dp" android:layout_height="1dp" />
    <Button android:id="@+id/btnRecharge50" android:visibility="gone" android:layout_width="1dp" android:layout_height="1dp" />
    <Button android:id="@+id/btnRecharge100" android:visibility="gone" android:layout_width="1dp" android:layout_height="1dp" />
    <Button android:id="@+id/btnCustomRecharge" android:visibility="gone" android:layout_width="1dp" android:layout_height="1dp" />
    <EditText android:id="@+id/etRechargeAmount" android:visibility="gone" android:layout_width="1dp" android:layout_height="1dp" />

</LinearLayout>