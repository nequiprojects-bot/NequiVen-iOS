<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlayRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#CC000000">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:maxWidth="520dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="32dp"
        app:cardBackgroundColor="#1A1A1A"
        app:strokeColor="#303F9F"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp">

            <!-- Fondo animable (paisaje) -->


            <!-- Botón cerrar (X) -->
            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Cerrar"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="@color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="6dp"/>

            <!-- Texto principal -->
            <TextView
                android:id="@+id/tvHeadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="Bienvenido a Nequi Ven V5.1"
                android:textColor="#FFFFFFFF"
                android:textSize="26sp"
                android:fontFamily="@font/manrope_bold"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:shadowColor="#80303F9F"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Descripción breve -->
            <TextView
                android:id="@+id/tvBody"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Queremos evitar que seas víctima de estafas con ventas no autorizadas del APK. Para adquirir acceso al APK más realista de Nequi, contáctanos por Telegram para adquirir tu usuario."
                android:textColor="#E0E0E0"
                android:textSize="15sp"
                android:fontFamily="@font/manrope_medium"
                android:gravity="start"
                android:lineSpacingExtra="6dp"
                app:layout_constraintTop_toBottomOf="@id/tvHeadline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Botón único Grupo oficial -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreatorAngyyOverlay"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginTop="24dp"
                android:text="Adquiere tu acceso ahora"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/manrope_bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="#3F51B5"
                app:cornerRadius="14dp"
                app:elevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvBody"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Creador -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOfficialGroup"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginTop="12dp"
                android:text="Grupo Oficial"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="@font/manrope_medium"
                android:textColor="#FFFFFF"
                app:backgroundTint="#5C6BC0"
                app:cornerRadius="14dp"
                app:strokeColor="#7986CB"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/btnCreatorAngyyOverlay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Link "No volver a mostrar" -->
            <TextView
                android:id="@+id/tvNoMostrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No volver a mostrar"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/manrope_medium"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/btnOfficialGroup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
